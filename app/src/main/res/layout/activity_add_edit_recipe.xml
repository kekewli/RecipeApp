<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text=" RecipeApp"
                    android:textColor="@color/edittext_text"
                    android:textSize="26sp"
                    tools:ignore="HardcodedText,TextSizeCheck" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Название"
                    android:textColor="@color/edittext_text"
                    android:textSize="16sp"
                    android:layout_marginTop="0dp"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/titleEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:gravity="top"
                    android:hint=" Название блюда"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textColor="@color/edittext_text"
                    android:textColorHint="@color/edittext_hint"
                    tools:ignore="HardcodedText,VisualLintTextFieldSize" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Категория"
                    android:textColor="@color/edittext_text"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="0dp"
                    tools:ignore="HardcodedText" />
                <Spinner
                    android:id="@+id/categorySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:textColor="@color/edittext_text"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="8dp"
                    android:minHeight="48dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Описание"
                    android:textColor="@color/edittext_text"
                    android:textSize="16sp"
                    android:layout_marginTop="0dp"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/descriptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:gravity="top"
                    android:hint="Описание блюда"
                    android:importantForAutofill="no"
                    android:inputType="textMultiLine"
                    android:minHeight="70dp"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/edittext_text"
                    android:textColorHint="@color/edittext_hint"
                    tools:ignore="HardcodedText,VisualLintTextFieldSize" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Ингредиенты"
                    android:textColor="@color/edittext_text"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/ingredientsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/edittext_border"
                    android:gravity="top"
                    android:hint="Ингредиенты блюда"
                    android:importantForAutofill="no"
                    android:inputType="textMultiLine"
                    android:minHeight="70dp"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/edittext_text"
                    android:textColorHint="@color/edittext_hint"
                    tools:ignore="HardcodedText,VisualLintTextFieldSize" />

                <ImageView
                    android:id="@+id/recipeImageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/edittext_border"
                    android:importantForAccessibility="no"
                    android:padding="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/camera" />

                <Button
                    android:id="@+id/addPhotoButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/purple_500"
                    android:text="Добавить фото"
                    android:textColor="@color/white"
                    tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/purple_500"
                    android:text="Сохранить"
                    android:textColor="@color/white"
                    tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />

                <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Удалить"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/purple_500"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />
        </LinearLayout>
</ScrollView>